generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int          @id @default(autoincrement())
  email    String       @unique
  name     String?
  password String
  role     String       @default("USER")
  
  jobs     JobVacancy[]
}

model JobVacancy {
  id           Int      @id @default(autoincrement())
  title        String
  company      String
  location     String
  description  String
  requirements String
  salary       String
  status       String   @default("ACTIVE")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  createdBy    Int
  creator      User     @relation(fields: [createdBy], references: [id])
}
